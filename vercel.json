{
  "version": 2,
  "buildCommand": "cd frontend && npm install && cross-env DISABLE_ESLINT_PLUGIN=true CI=false npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ],
  "env": {
    "CI": "false",
    "DISABLE_ESLINT_PLUGIN": "true",
    "NODE_ENV": "production",
    "MONGODB_URI": "mongodb+srv://USERNAME:PASSWORD@cluster0.mongodb.net/linkedin-networker"
  }
}
